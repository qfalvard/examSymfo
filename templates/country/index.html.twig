{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}

{% for country in countries %}
<h2>
    <a href="{{ path("country_show", {country: country.id}) }}">{{ country.name }}</a>
</h2>
Nombre de personnes contaminées : <small>{{ country.contaminated }}</small><br>
Nombre de personnes guéries : <small>
    {% if country.contaminated < country.healed %}
    <p class="text-success">{{country.healed}}</p>
    {% else %}
    <p class="text-danger">{{country.healed}}</p>
    {% endif %}</small> <br>
Nombre de personnes zombifiées : <small>{{ country.zombified }}</small> <br>

{% endfor %}

{% endblock %}